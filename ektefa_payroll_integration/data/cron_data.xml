<odoo noupdate="1">

    <!-- Cron Job to Sync Salaries By Company ID from Ektefa -->
    <record id="ir_cron_sync_salaries_by_company_data" model="ir.cron">
        <field name="name">Ektefa: Sync Salaries By Company</field>
        <field name="model_id" ref="ektefa_payroll_integration.model_ektefa_payroll_sync"/>
        <field name="state">code</field>
        <field name="code">model.action_sync_salaries_by_company()</field>
        <field name="interval_number">1</field> <!-- Run every 1 month -->
        <field name="interval_type">months</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

