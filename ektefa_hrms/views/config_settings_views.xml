                        <block title="Ektefa End of Service Accounts - اعدادات قيود نهاية الخدمة" id="ektefa_eos_accounts" invisible="not enable_ektefa_integration">
                            <setting  string="EOS Accounts - حسابات نهاية الخدمة" class="col-lg-12">
                                    <div class="content-group">
                                        <div class="row mt8">
                                            <label for="ektefa_eos_net_total_debit_account" string="Net Total - حساب قيد صافي المستلم" class="col-lg-5 o_light_label"/>
                                            <field name="ektefa_eos_net_total_debit_account"/>
                                        </div>
                                        <div class="row mt8">
                                            <label for="ektefa_eos_net_total_debit_account_2" string="Deductions - حساب قيد الحسميات من نهاية الخدمة" class="col-lg-5 o_light_label"/>
                                            <field name="ektefa_eos_net_total_debit_account_2" />
                                        </div>
                                        <div class="row mt8">
                                            <label for="ektefa_eos_net_total_credit_account" string="Allowance - حساب قيد استحقاق نهاية الخدمة" class="col-lg-5 o_light_label"/>
                                            <field name="ektefa_eos_net_total_credit_account" />
                                        </div>
                                    </div>
                            </setting>
                        </block>

                        <block title="Ektefa Loans Accounts - اعدادات قيد السلف" id="ektefa_loans_accounts" invisible="not enable_ektefa_integration">
                            <setting  string="Loans - السلف"  class="col-lg-6">
                                    <div class="content-group">
                                        <div class="row mt8">
                                            <label for="ektefa_loans_credit_account" string="Credit Account" class="col-lg-4 o_light_label"/>
                                            <field name="ektefa_loans_credit_account"/>
                                        </div>
                                        <div class="row mt8">
                                            <label for="ektefa_loans_debit_account" string="Debit Account" class="col-lg-4 o_light_label"/>
                                            <field name="ektefa_loans_debit_account" />
                                        </div>
                                    </div>
                            </setting>
                        </block>

                        <block title="Ektefa Loans Settlement Accounts - اعدادات قيد اقفال السلفة للموظف" id="ektefa_loans_settlement_accounts" invisible="not enable_ektefa_integration">
                            <setting  string="Loans Settlement - سداد السلفه للموظف"  class="col-lg-6">
                                    <div class="content-group">
                                        <div class="row mt8">
                                            <label for="ektefa_loans_settlement_credit_account" string="Credit Account" class="col-lg-4 o_light_label"/>
                                            <field name="ektefa_loans_settlement_credit_account"/>
                                        </div>
